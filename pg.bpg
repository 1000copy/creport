#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = CReportEdit.exe creport4.bpl CReport_Demo.exe ReportTests.exe \
  UnitTestsW32.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

CReportEdit.exe: vcl\CReportEdit.dpr
  $(DCC)

creport4.bpl: vcl\creport4.dpk
  $(DCC)

CReport_Demo.exe: demo\CReport_Demo.dpr
  $(DCC)

ReportTests.exe: test\ReportTests.dpr
  $(DCC)

UnitTestsW32.exe: dunit\tests\UnitTestsW32.dpr
  $(DCC)


